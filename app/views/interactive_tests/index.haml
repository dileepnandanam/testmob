.row
  .border-1.col-lg-3.quaco-panel.p-2
    = render partial: 'tests/video_feedback_cv'
  .border-1.col-lg-5.vision-panel.p-2
    %img.vision-screenshot{src: Vision.new.capture}
    .vision-screenshot-overlay
  .border-1.col-lg-4.control-panel.p-2
    = link_to 'Capture', capture_screen_shot_interactive_tests_path, remote: true, class: 'btn-primary refresh-vision controll-btn'
    .clearfix
    %canvas.crop-result
    .clearfix
    = link_to 'Touch', '#', class: 'btn-priamry execute-touch controll-btn', data: {url: execute_touch_interactive_tests_path}
    = link_to 'Execute predefined instructions', execute_predefined_actions_interactive_tests_path, remote: true, method: :post, class: 'btn-primary execute-predefined controll-btn'
    
    = form_with(url: execute_text_command_interactive_tests_path, method: 'POST', remote: true, class: 'execute-command') do
      = label_tag :command
      = text_field_tag :text_command
      = submit_tag 'Execute', class: 'controll-btn'
    