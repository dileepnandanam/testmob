.config-container
  Quaco host
  = simple_form_for(AppConfig.where(name: 'host').first_or_create) do |f|
    = f.input :value
    = f.submit
  %br
  Quaco port
  = simple_form_for(AppConfig.where(name: 'port').first_or_create) do |f|
    = f.input :value
    = f.submit
  
  %br
  Gallery Link
  = simple_form_for(AppConfig.where(name: 'galery_link').first_or_create) do |f|
    = f.input :value
    = f.submit
  %br
  Document Link
  = simple_form_for(AppConfig.where(name: 'document_link').first_or_create) do |f|
    = f.input :value
    = f.submit
  %br
  Sales Email 
  = simple_form_for(AppConfig.where(name: 'sales_email').first_or_create) do |f|
    = f.input :value
    = f.submit

  %br
  Target Machine
  = simple_form_for(AppConfig.where(name: 'target_quaco').first_or_create) do |f|
    = f.collection_radio_buttons :value, [['quaco_1', 'Quaco'], ['quaco_2', 'Demenzio']], :first, :last, item_wrapper_class: 'clearfix'
    .clearfix
    = f.submit


  %br
  - if false
    .connection.float-left
      %h3
        TCP
      - if QuacoTcp.connection.nil?
        = link_to 'Connect to Quaco via Socket', connect_app_configs_path(type: 'tcp'), class: 'connection-action', method: :put
      - else
        = link_to 'Disconnect from Quaco Socket', disconnect_app_configs_path(type: 'tcp'), class: 'connection-action', method: :put

  .connection.float-left
    - if !Quaco.closed?
      = image_tag('connected')
    - else
      = image_tag('disconnected')
      
    .clearfix
    = link_to 'Connect to Quaco via Telnet', connect_app_configs_path, class: 'connection-action', method: :put
    = link_to 'Disconnect from Quaco Telnet', disconnect_app_configs_path, class: 'connection-action', method: :put
    = link_to 'Flush', flush_app_configs_path, method: :put, class: 'connection-action'